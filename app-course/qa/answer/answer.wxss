/*全局样式*/
page {
	background: #fbf9ff;
}

.container {
	padding: 10px;
}

/*标题*/
.title {
	font-size: 16px;
	text-align: center;
	line-height: 140%;
	margin-top: 10px;
	margin-bottom: 10px;
}

/*头像昵称日期*/
.sub-title {
	font-size: 12px;
	color: #ccc;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	align-items: center;
}

/*头像*/
.avatar {
	width: 30px;
	height: 30px;
	border-radius: 50%;
}

/*昵称日期*/
.nickname, .time {
	margin: 0 5px;
}

/*内容*/
.content {
	color: #696969;
	margin-top: 10px;
	margin-bottom: 10px;
}

/*预览总容器*/
.gallery {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
}

.item {
	position: relative;
}

/*小图片*/
.thumb {
	margin: 5px;
}

/*标题栏*/
.caption {
	border-bottom: 1px solid #ccc;
	padding-top: 15px;
	padding-bottom: 15px;
	padding-left: 10px;
	margin-top: 15px;
	margin-bottom: 10px;
}

/*回答*/
textarea {
	height: 300px;
	background: white;
}

/*按钮*/
.answer-button {
	margin-top: 100px;
}

/*回答者*/
.top-part {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	color: #333;
	font-size: 14px;
	margin: 10px 0;
}

.bottom-part {
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	color: #ccc;
	font-size: 12px;
	margin-left: 130px;
	margin-bottom: 10px;
	padding-bottom: 4px;
	border-bottom: 1px solid #eee;
}

.avatar-container {
	width: 10%;
}

.answer-content {
	width: 90%;
	margin-left: 10px;
}

/*暂无回答*/
.empty-holder {
	text-align: center;
	color: #ccc;
	font-size: 12px;
}