/*每行*/
.row {
	margin: 5px;
	padding: 5px;
	border-bottom: solid 1px #e3e3e3;
}

/*头像*/
.avatar {
	width: 20px;
	height: 20px;
	border-radius: 50%;
	margin-left: 5px;
	margin-right: 5px;
}

/*标题*/
.title {
	color: #404351;
	line-height: 140%;
}

/*说明*/
.desc {
	font-size: 12px;
	color: #6c6c6c;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	margin-top: 5px;
	margin-bottom: 5px;
}

/*昵称与头像*/
.avatar-nickname {
	display: flex;
	flex-direction: row;
	align-items: center;
}

/*昵称*/
.nickname {
	margin-left: 5px;
}

/*日期*/
.time {
	text-align: right;
}

.request-container {
	position: fixed;
	width: 100%;
	height: 80px;
	left: 0;
	bottom: 0;
}

/*提问按钮*/
.request-button {
	width: 40px;
	height: 40px;
	background: #48c23d;
	border-radius: 50%;
	border: 5px solid #eee;
	color: white;
	line-height: 45px;
	font-size: 40px;
	text-align: center;
	margin: 0 auto;
}

/*上拉加载提示*/
.loading-indicator {
	text-align: center;
	font-size: 12px;
	margin: 10px 0;
}