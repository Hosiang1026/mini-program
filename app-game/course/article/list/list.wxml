<!-- 遍历文章列表 -->
<view wx:for="{{article_list}}" class="row" wx:key="">
    <!-- 缩略图 -->
    <view>
        <image src="{{item.thumb}}" class="thumb" mode="aspectFill" />
    </view>
    <!-- 标题与日期 -->
    <view>
        <!-- 标题 -->
        <view class="title">{{item.title}}</view>
        <!-- 日期 -->
        <view class="time">{{item.updatedAt}}</view>
    </view>
</view>